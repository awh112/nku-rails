<%= form_for :assignment, url: assignments_path do |a| %>

<% @student_array = Student.all.to_a %>
<% @name_array = [] %>
<% @student_array.each { |s| @name_array.push(s.name) } %>

<h1>New Assignment</h1>

<p>
  <%= a.label :student %>
  <%= select(:student, :student_id, @name_array) %>
</p>

<p>
  <%= a.label :name %>
  <%= a.text_field :name %>
</p>

<p>
  <%= a.label :score %>
  <%= a.text_field :score %>
</p>

<p>
  <%= a.label :total %>
  <%= a.text_field :total %>
</p>

<p>
  <%= a.submit %>
</p>

<% end %>